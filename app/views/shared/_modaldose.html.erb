<div class="modal fade" id="add-ingredient" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add new ingredient</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% unless @cocktail.id.nil? %>
          <%= simple_form_for([@cocktail, @dose]) do |f| %>
                    <%= f.input :description %>
                    <%= f.association :ingredient %>
                    <%= f.submit class: 'my-primary-btn', id: 'btn-submit' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
